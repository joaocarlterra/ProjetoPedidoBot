{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strictNullChecks": false,
    "strict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"],
      "src/*": ["./src/*"]
    }
  },
  "include": ["src/**/*"]
}